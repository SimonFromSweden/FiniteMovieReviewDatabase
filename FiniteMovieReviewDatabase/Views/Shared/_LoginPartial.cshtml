@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <a class="nav-link fw-bold" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage" style="color: #F36527;">Hello @User.Identity?.Name!</a>
        </li>
        <li class="nav-item">
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Grid", "Movies", new { area = "" })">
                <button type="submit" class="nav-link btn btn-link fw-bold" style="color: #F36527;">Logout</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link fw-bold" asp-area="Identity" asp-page="/Account/Register" style="color: #F36527;">Register</a>
        </li>
        <li class="nav-item">
            <a class="nav-link fw-bold" asp-area="Identity" asp-page="/Account/Login" style="color: #F36527;">Login</a>
        </li>
    }
</ul>
